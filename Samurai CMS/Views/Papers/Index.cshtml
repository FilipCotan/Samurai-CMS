@model IEnumerable<Samurai_CMS.Models.AuthorPaper>

@{
    ViewBag.Title = "Index";
}

<h2>Author Papers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Session.Topic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Authors)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Keywords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AbstractFileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaperFileName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Session.Topic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Authors)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Keywords)
        </td>
        <td>
            @Html.ActionLink(item.AbstractFileName, "DownloadAbstract", new { paperId = item.Id })
        </td>
        <td>
            @Html.ActionLink(item.PaperFileName, "DownloadPaper", new { paperId = item.Id })
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
            @Html.ActionLink("Review", "Details", new { id=item.Id }) 
            @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
