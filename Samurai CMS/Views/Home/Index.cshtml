@model List<Samurai_CMS.Models.Edition>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/ImageResources/devtalks_carousel.jpg" alt="DevTalks">
            <div class="carousel-caption">
                <h3>DevTalks Cluj-Napoca</h3>
                <p>2017</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/ImageResources/codecamp_carousel.png" alt="CodeCamp">
            <div class="carousel-caption">
                <h3>CodeCamp Cluj-Napoca</h3>
                <p>2017</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/ImageResources/medcamp_carousel.jpg" alt="MedCamp">
            <div class="carousel-caption">
                <h3>MedCamp</h3>
                <p>2016</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <img class="img-circle img-responsive img-center" src="~/Content/ImageResources/mark_zuckerberg.jpg" alt="Mark Zuckerberg">
            <h2>Mark Zuckerberg</h2>
            <p>If only this were a social network.</p>
        </div>
        <div class="col-sm-4">
            <img class="img-circle img-responsive img-center" src="~/Content/ImageResources/bill_gates.jpeg" alt="Bill Gates">
            <h2>Bill Gates</h2>
            <p>I would sell my wife to fund this.</p>
        </div>
        <div class="col-sm-4">
            <img class="img-circle img-responsive img-center" src="~/Content/ImageResources/linus_torvalds.png" alt="Linus Torvalds">
            <h2>Linus Torvalds</h2>
            <p>Even better than Linux!</p>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-8">
            <h2>About us</h2>
            <p>Something about us</p>
        </div>
        <div class="col-sm-4">
            <h2>Contact us</h2>
            <address>
                <strong>Samurai CMS</strong>
                <br>Cluj-Napoca
                <br>Strada Teodor Mihali 51
                <br>Email: contact@samuraicms.com
                <br>Phone: 0777070700
                <br>
            </address>

        </div>
    </div>
</div>
