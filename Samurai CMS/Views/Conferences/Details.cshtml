@model Samurai_CMS.Models.Conference

@{
    ViewBag.Title = "Details";
}

<h2>Editions</h2>

@*This is bad, because I use 3 different iterations for the same collection*@
<br />
Current Edition
<hr />
<div class="container-fluid">
    @foreach (var edition in Model.Editions)
    {
        if (edition.StartDate < DateTime.Today && edition.EndDate > DateTime.Today)
        {
            <div class="col-sm-6 col-md-6 col-lg-6 container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>Title:</strong> <text> @Html.ActionLink(edition.Title, "Details", "Editions", new { id = edition.Id }, null) </text>
                    </div>
                    <div class="panel-body">
                        <p>@Html.DisplayFor(modelItem => edition.Description)</p>
                        <p>@Html.DisplayFor(modelItem => edition.StartDate) - @Html.DisplayFor(modelItem => edition.EndDate) @Html.DisplayFor(modelItem => edition.Year)</p>
                    </div>
                </div>
            </div>
        }
    }
</div>

<br />
Upcoming Editions
<hr />
<div class="container-fluid">
    @foreach (var edition in Model.Editions)
    {
        if (edition.StartDate > DateTime.Today)
        {
