                        <p>@Html.DisplayFor(modelItem => edition.StartDate) - @Html.DisplayFor(modelItem => edition.EndDate) @Html.DisplayFor(modelItem => edition.Year)</p>
                    </div>
                </div>
            </div>
        }
    }
</div>

<br />
