@model IEnumerable<Samurai_CMS.Models.Conference>

@{
    ViewBag.Title = "Conferences";
}

<h2>Conferences</h2>

@if (ViewBag.IsAdministrator)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<div class="container-fluid">
    @{ int index = 0;}
    @foreach (var conference in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-4 container">
            <div class="panel panel-default conference-animated-box">
                <div class="panel-heading">
                    @if (ViewBag.IsAdministrator)
                    {
                        <div class="row">
                            <div class="col-md-8">
                                <a href='@Url.Action("Details", "Conferences", new {id = conference.Id})' title="Details"><strong class="">@Html.DisplayFor(modelItem => conference.Name)</strong></a>
                            </div>
                            <div class="col-md-4">
                                <a data-toggle="modal" href="#@("edit-modal-"+index)" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                                <span>&nbsp; &nbsp;</span>
                                <a data-toggle="modal" href="#@("delete-modal-"+index)" title="Delete"><span class="glyphicon glyphicon-trash"></span></a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a href='@Url.Action("Details", "Conferences", new {id = conference.Id})' title="Details"><strong class="">@Html.DisplayFor(modelItem => conference.Name)</strong></a>
                    }
                </div>
                <div class="panel-body panel-body-width">
                    <p><strong>@Html.DisplayNameFor(model => model.Theme):</strong> @Html.DisplayFor(modelItem => conference.Theme)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.PaperIsRequired):</strong> @Html.DisplayFor(modelItem => conference.PaperIsRequired)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.ReviewersCount):</strong> @Html.DisplayFor(modelItem => conference.ReviewersCount)</p>
                </div>
            </div>

            @if (ViewBag.IsAdministrator)
            {
                <!-- Delete Modal -->
                <div class="modal fade" id="@("delete-modal-"+index)" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4>Are you sure you want to delete this conference?</h4>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal" action="">Yes</button>
                                @*<a href="@Html.ActionLink("Delete", "Conferences", new { id = @conference.Id })" class="btn btn-danger">Yes</a>*@
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Edit Modal -->
                <div class="modal fade" id="@("edit-modal-"+index)" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4>Edit conference</h4>
                            </div>
                            <div class="modal-body">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        @Html.LabelFor(model => conference.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => conference.Name, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => conference.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => conference.Theme, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => conference.Theme, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => conference.Theme, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => conference.PaperIsRequired, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <div class="checkbox">
                                                @Html.EditorFor(model => conference.PaperIsRequired)
                                                @Html.ValidationMessageFor(model => conference.PaperIsRequired, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => conference.ReviewersCount, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => conference.ReviewersCount, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => conference.ReviewersCount, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    @*<div class="form-group">
                                        @Html.Action("Edit", "Conferences", new {@conference.)
                                    </div>*@
                                </div>
                            </div>
                            <div class="modal-footer form-group">
                                <button type="button" class="btn btn-success" data-dismiss="modal">Save</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
        index++;
    }
</div>
