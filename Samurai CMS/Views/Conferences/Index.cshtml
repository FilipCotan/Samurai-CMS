@model IEnumerable<Samurai_CMS.Models.Conference>

@{
    ViewBag.Title = "Conferences";
}

<h2>Conferences</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Theme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaperIsRequired)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewersCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Theme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaperIsRequired)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewersCount)
        </td>
        <td>
            <a href='@Url.Action("Details", "Conferences", new {id = item.Id})' title="Details"><span class="glyphicon glyphicon-list-alt"></span></a>

            @if (ViewBag.IsAdministrator)
            {
                <text> &nbsp;&nbsp;| &nbsp;&nbsp; <a href='@Url.Action("Edit", "Conferences", new {id = item.Id})' title="Edit"><span class="glyphicon glyphicon-edit"></span></a> &nbsp; &nbsp; | &nbsp; &nbsp;</text>
                <a href='@Url.Action("Delete", "Conferences", new {id = item.Id})' title="Delete"><span class="glyphicon glyphicon-trash"></span></a>
            }
        </td>
    </tr>
}

</table>
